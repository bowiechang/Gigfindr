<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgyellow1"
    app:cardCornerRadius="7dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgyellow1">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_slab_bold_download"
            android:textSize="25sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="35dp"
            android:text="Are you sure you want to delete show?"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/bgyellow1"
            android:layout_below="@id/tv1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rectangle_blackborder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="DELETE"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_condensed_bold_test_download"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle_blackborder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="CANCEL"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_condensed_bold_test_download"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>