<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:clipToPadding="false"
                                             android:orientation="horizontal"
                                             android:outlineProvider="bounds">


    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/allshowlist_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <!--<android.support.constraint.ConstraintLayout-->

        <!--android:id="@+id/constraintLayout"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:background="@drawable/listgradient"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.571"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="0.0">-->
    <!--</android.support.constraint.ConstraintLayout>-->

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/allshowlist_bandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/fjalla_one_test"
        android:textAllCaps="true"
        android:textColor="@color/yellow1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/allshowlist_locationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/roboto_medium_test"
        android:textColor="@color/white_greyish"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allshowlist_bandName"/>

    <!--<TextView-->
        <!--android:id="@+id/allshowlist_address"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="14dp"-->
        <!--android:layout_marginEnd="50dp"-->
        <!--android:fontFamily="@font/roboto_light_download"-->
        <!--android:text="address"-->
        <!--android:textColor="@color/white_greyish"-->
        <!--android:textSize="12sp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/allshowlist_locationName"/>-->

        <TextView
            android:id="@+id/allshowlist_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/roboto_light_download"
            android:textColor="@color/white_greyish"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/allshowlist_locationName"
            app:layout_constraintTop_toBottomOf="@+id/allshowlist_bandName"/>

    <TextView
        android:id="@+id/allshowlist_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_medium_test"
        android:textColor="@color/white_greyish"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allshowlist_address"/>

        <TextView
            android:id="@+id/allshowlist_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_medium_test"
            android:textColor="@color/white_greyish"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allshowlist_date"/>

    <RelativeLayout
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/circle"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:id="@+id/allshowlist_fee"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/roboto_condensed_bold_test_download"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>